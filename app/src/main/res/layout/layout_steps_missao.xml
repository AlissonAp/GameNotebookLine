<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/header_blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvPecas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_above="@+id/rvPecas"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="87dp"
        android:background="@android:color/holo_blue_bright" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@android:color/holo_blue_light" />

    <Button
        android:id="@+id/btn_seguir"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginBottom="14dp"
        android:onClick="avancarEtapa"
        android:text="Prosseguir"
        android:textSize="14dp"
        android:layout_above="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3" />

    <TextView
        android:id="@+id/txtDescEtapa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Etapa 1"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignBottom="@+id/btn_seguir"
        android:layout_alignStart="@+id/imageView3" />

    <TextView
        android:id="@+id/txvNivel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Level"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/txtDescEtapa"
        android:layout_marginStart="26dp" />

    <TextView
        android:id="@+id/txvDinheiro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtNivel"
        android:layout_alignBottom="@+id/txtNivel"
        android:layout_toStartOf="@+id/txtOuro"
        android:text="Ouros"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtNomeUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/txvNivel"
        android:layout_marginLeft="10dp"
        android:text="Usuario"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtOuro"
        android:layout_width="50dp"
        android:layout_height="15dp"
        android:layout_alignBaseline="@+id/txvDinheiro"
        android:layout_alignBottom="@+id/txvDinheiro"
        android:layout_margin="10dp"
        android:layout_toEndOf="@+id/ImgPecaMaior"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/ImgPecaMaior"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/txtInformacoesPeca"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/imageView3"
        android:layout_below="@+id/ImgPecaMaior"
        android:layout_marginTop="14dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/txtNivel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="TextView"
        android:textAlignment="textStart"
        android:layout_alignBaseline="@+id/txvNivel"
        android:layout_alignBottom="@+id/txvNivel"
        android:layout_toEndOf="@+id/txvNivel"
        android:layout_marginStart="15dp" />

</RelativeLayout>
