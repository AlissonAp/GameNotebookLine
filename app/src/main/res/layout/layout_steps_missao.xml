<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/header_blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvPecas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_above="@+id/rvPecas"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="87dp"
        android:background="@android:color/holo_blue_dark" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@android:color/holo_blue_light" />

    <Button
        android:id="@+id/btn_seguir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:text="Prosseguir"
        android:layout_above="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3"
        android:onClick="avancarEtapa"/>

    <TextView
        android:id="@+id/txtDescEtapa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView3"
        android:layout_alignTop="@+id/btn_seguir"
        android:layout_margin="10dp"
        android:text="Etapa 1"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txvNivel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="11dp"
        android:text="Level"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ImgPecaMaior" />

    <TextView
        android:id="@+id/txvDinheiro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ouros"
        android:layout_alignBaseline="@+id/txvNivel"
        android:layout_alignBottom="@+id/txvNivel"
        android:layout_alignStart="@+id/btn_seguir" />

    <TextView
        android:id="@+id/txtNomeUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/txvNivel"
        android:layout_marginLeft="10dp"
        android:text="Usuario" />

    <TextView
        android:id="@+id/txtOuro"
        android:layout_width="60dp"
        android:layout_height="15dp"
        android:layout_alignBaseline="@+id/txvDinheiro"
        android:layout_alignBottom="@+id/txvDinheiro"
        android:layout_alignEnd="@+id/btn_seguir" />

    <ImageView
        android:id="@+id/ImgPecaMaior"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/txtInformacoesPeca"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/imageView3"
        android:layout_below="@+id/ImgPecaMaior"
        android:layout_marginTop="14dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/txtNivel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txvNivel"
        android:layout_centerHorizontal="true"
        android:text="TextView" />

</RelativeLayout>
