<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/geral"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:scrollbars="horizontal|vertical"
    >

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:orientation="horizontal"
        android:background="#515ba1"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/LinearLayoutImgUser"
            android:layout_width="145dp"
            android:layout_height="147dp"
            android:background="#515ba1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>



        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/infoUser"
            android:layout_width="180dp"
            android:layout_height="147dp"
            android:orientation="vertical"
            android:background="#515ba1"
            android:paddingTop="20dp"
            android:paddingLeft="15dp">



            <TextView
                android:id="@+id/txtNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#fc99ced6"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPontuacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#fc99ced6"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtNivel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#fc99ced6"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtDinheiro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#fc99ced6"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutImgLogout"
            android:layout_width="147dp"
            android:layout_height="147dp"
            android:background="#515ba1"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/imgLogout"
                android:layout_width="39dp"
                android:layout_height="33dp"
                android:paddingTop="5dp"
                android:src="@drawable/logout"
                android:onClick="Logout"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/missoes"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/listView_missoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>